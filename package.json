{
  "name": "arkui-support-matrix",
  "version": "1.0.0",
  "description": "ArkUI通用属性支持度可视化大盘",
  "main": "index.js",
  "scripts": {
    "dev": "npm run init-data && concurrently \"npm run server:dev\" \"npm run frontend:dev\"",
    "server:dev": "tsx watch src/server/index.ts",
    "frontend:dev": "cd src/frontend && npm run dev",
    "frontend:build": "cd src/frontend && npm install && npm run build",
    "scan": "tsx src/scanner/index.ts",
    "init-data": "node scripts/init-data.js",
    "build": "npm run init-data && npm run frontend:build && tsc",
    "start": "node dist/server/index.js"
  },
  "keywords": ["arkui", "harmonyos", "visualization"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.10.6",
    "typescript": "^5.3.3",
    "tsx": "^4.7.0",
    "concurrently": "^8.2.2"
  }
}
